<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#4CAF50"
    android:layout_height="330dp"
    tools:context=".ConnecttionSetup">

    <TextView

        android:drawableLeft="@drawable/connect"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="25sp"
        android:textColor="#000000"
        android:text="CONNECTION SETUP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="ADD CONNECTION"
                android:textSize="20sp"
                ></TextView>


            <TextView
                android:id="@+id/ppp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:drawablePadding="8dp"
                android:text="NAME : "
                android:textSize="20sp"
                android:textStyle="italic"></TextView>

            <EditText
                android:id="@+id/con1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="45dp"
                android:textAlignment="center"></EditText>

            <TextView
                android:id="@+id/lll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ppp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:text="IP :"
                android:textSize="20sp"
                android:textStyle="italic"></TextView>

            <EditText
                android:id="@+id/con2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ppp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="18dp"
                android:textAlignment="center"></EditText>

            <Button
                android:id="@+id/consave"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lll"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:background="@drawable/buttondesign2"
                android:text="save"
                android:textColor="#FDFCFC"></Button>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>