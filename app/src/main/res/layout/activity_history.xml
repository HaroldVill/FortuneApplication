<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="MissingPrefix"
    android:layout_height="match_parent" >

<ImageView
    android:id="@+id/homes"
   android:layout_marginStart="5dp"
    android:layout_marginTop="8dp"
    android:src="@drawable/home"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
</ImageView>

    <ImageView
        android:id="@+id/del"
        android:layout_marginEnd="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>


    <TextView
        android:textStyle="italic"
        android:id="@+id/head"
        android:textColor="#0A41A4"
        android:textSize="23sp"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="TRANSACTION HISTORY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>


    <RelativeLayout
        android:id="@+id/rells"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/syncreceipts"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:text="PRINCIPALS"
            android:layout_marginTop="5dp"></Button>

        <TextView
            android:id="@+id/grd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:text="Total Amt:"
            android:textColor="#0A41A4"
            android:textStyle="italic">

        </TextView>

        <TextView
            android:id="@+id/booktot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:text="0.00"
            android:textColor="#E13022">
        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="160dp"
            android:text="No. of Customers:"
            android:textColor="#0A41A4"
            android:textStyle="italic"></TextView>

        <TextView
            android:id="@+id/numcustomer"
            android:textColor="#E13022"
            android:text="0"
            android:layout_marginEnd="150dp"
           android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>


<!--        -->
<!--        <TableLayout-->

<!--            android:id="@+id/table"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginStart="5dp"-->
<!--            android:layout_marginTop="350dp"-->
<!--            android:layout_marginEnd="5dp"-->
<!--            android:layout_marginBottom="40dp"-->
<!--            android:background="@color/black"></TableLayout>-->

        <TableRow
            android:id="@+id/table2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grd"
            android:background="#4CAF50">

            <TextView
                android:id="@+id/h1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="10sp"
                android:text="@string/st1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/h2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="10sp"
                android:text="@string/st2"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/h3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="10sp"
                android:text="@string/st3"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/h4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="10sp"
                android:text="@string/st4"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </TableRow>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/histview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table2"
            android:layout_marginTop="12dp" />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/aray"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/sync" />


</RelativeLayout>