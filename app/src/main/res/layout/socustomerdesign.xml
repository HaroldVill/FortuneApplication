<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textColor="#3F51B5"
                android:textStyle="bold"
                android:textSize="23sp"
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Info:">

            </TextView>

            <Button
                android:id="@+id/request_repin"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/header"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="0dp"
                android:background="@color/black"
                android:backgroundTint="@color/black"
                android:backgroundTintMode="screen"
                android:drawableLeft="@drawable/sinkicon"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13sp"
                style="?android:attr/borderlessButtonStyle"
                ></Button>

            <TextView
                android:layout_below="@+id/request_repin"
                android:layout_marginTop="10dp"
                android:id="@+id/is_visited"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNVISITED">
            </TextView>

            <TextView

                android:layout_below="@+id/request_repin"
                android:layout_marginTop="10dp"
                android:id="@+id/ci"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:visibility="invisible">
            </TextView>


            <TextView
                android:id="@+id/so1"
                android:layout_below="@+id/header"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:visibility="invisible">
            </TextView>





            <TextView

                android:id="@+id/cnn"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/ci"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CUSTOMER NAME:">
            </TextView>


            <TextView
                android:textColor="#F44336"
                android:id="@+id/so2"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/ci"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CUSTOMER NAME:">
            </TextView>




            <TextView

                android:id="@+id/caddd"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/cnn"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADDRESS:">
            </TextView>




            <TextView
                android:id="@+id/so3"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/cnn"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADDRESS:">
            </TextView>




            <TextView

                android:id="@+id/kk"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/caddd"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHONE NO:">
            </TextView>


            <TextView
                android:textColor="#F44336"
                android:id="@+id/so4"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/caddd"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHONE NO:">
            </TextView>

            <TextView
                android:id="@+id/sok"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/kk"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTACT PERSON">
            </TextView>
            <TextView
                android:id="@+id/p_level_label"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/sok"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRICE LEVEL">
            </TextView>

            <TextView
                android:id="@+id/longitude_label"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/p_level_label"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LONGITUDE">
            </TextView>

            <TextView
                android:id="@+id/latitude_label"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/longitude_label"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LATITUDE">
            </TextView>

            <TextView
                android:id="@+id/distance_label"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/latitude_label"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DISTANCE">
            </TextView>

            <TextView
                android:id="@+id/verified_label"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/distance_label"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VERIFICATION:">
            </TextView>

            <TextView
                android:id="@+id/socontact"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/kk"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTACT PERSON">
            </TextView>

            <TextView
                android:id="@+id/price_level"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/socontact"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRICE LEVEL">
            </TextView>

            <TextView
                android:id="@+id/longitude"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/price_level"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LONGITUDE">
            </TextView>

            <TextView
                android:id="@+id/latitude"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/longitude"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LATITUDE">
            </TextView>

            <TextView
                android:id="@+id/distance"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/latitude"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DISTANCE">
            </TextView>

            <TextView
                android:id="@+id/verfication"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/distance"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VERIFICATION">
            </TextView>

            <Button
                android:id="@+id/save_coordinate"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/verfication"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:background="#104B8C"
                android:backgroundTint="#063171"
                android:backgroundTintMode="screen"
                android:text="PIN"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13sp"

                android:visibility="invisible"></Button>

            <Button
                android:id="@+id/verify_pin"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/verfication"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:background="#1c5728"
                android:backgroundTint="#1c5728"
                android:backgroundTintMode="screen"
                android:text="VERIFY"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13sp"

                android:visibility="invisible"></Button>

            <Button
                android:id="@+id/remove_pin"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/verfication"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="10dp"
                android:background="#193f5c"
                android:backgroundTint="#193f5c"
                android:backgroundTintMode="screen"
                android:text="REPIN"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13sp"

                android:visibility="invisible"></Button>

            <Button
                android:id="@+id/skip_order"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/verfication"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="10dp"
                android:background="#9E1910"
                android:backgroundTint="#AA1228"
                android:backgroundTintMode="screen"
                android:text="SKIP"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13sp"

                android:visibility="invisible"></Button>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>