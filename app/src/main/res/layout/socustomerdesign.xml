<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textColor="#3F51B5"
                android:textStyle="bold"
                android:textSize="23sp"
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Info:">

            </TextView>


            <TextView

                android:layout_below="@+id/header"
                android:layout_marginTop="10dp"
                android:id="@+id/ci"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:">
            </TextView>


            <TextView
                android:id="@+id/so1"
                android:layout_below="@+id/header"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID">
            </TextView>





            <TextView

                android:id="@+id/cnn"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/ci"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CUSTOMER NAME:">
            </TextView>


            <TextView
                android:textColor="#F44336"
                android:id="@+id/so2"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/ci"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CUSTOMER NAME:">
            </TextView>




            <TextView

                android:id="@+id/caddd"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/cnn"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADDRESS:">
            </TextView>




            <TextView
                android:id="@+id/so3"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/cnn"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADDRESS:">
            </TextView>




            <TextView

                android:id="@+id/kk"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/caddd"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHONE NO:">
            </TextView>


            <TextView
                android:textColor="#F44336"
                android:id="@+id/so4"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/caddd"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHONE NO:">
            </TextView>

            <TextView
                android:id="@+id/sok"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/kk"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTACT PERSON">
            </TextView>

            <TextView
                android:id="@+id/longitude_label"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/sok"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LONGITUDE">
            </TextView>

            <TextView
                android:id="@+id/latitude_label"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/longitude_label"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LATITUDE">
            </TextView>

            <TextView
                android:id="@+id/distance_label"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/latitude_label"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DISTANCE">
            </TextView>

            <TextView
                android:id="@+id/socontact"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/kk"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTACT PERSON">
            </TextView>

            <TextView
                android:id="@+id/longitude"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/socontact"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LONGITUDE">
            </TextView>

            <TextView
                android:id="@+id/latitude"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/longitude"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LATITUDE">
            </TextView>

            <TextView
                android:id="@+id/distance"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/latitude"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DISTANCE">
            </TextView>
            <Button
                android:id="@+id/save_coordinate"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/distance"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="10dp"
                android:background="#009688"
                android:backgroundTint="#009737"
                android:backgroundTintMode="screen"
                android:text="PIN"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="italic"
                android:visibility="invisible"></Button>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>