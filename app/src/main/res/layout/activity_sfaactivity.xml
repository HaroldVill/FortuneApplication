<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="MissingPrefix"
    android:layout_height="wrap_content"
    tools:context=".SFAActivity">
    <ProgressBar
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/progressBar3"
        android:visibility="invisible"
        style="?android:attr/progressBarStyle"
        android:layout_width="160dp"
        android:layout_height="160dp" >
    </ProgressBar>

    <RelativeLayout
        android:background="#233EDA"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:drawableRight="@drawable/savena"
            android:id="@+id/save"
            android:textStyle=""
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:text="SAVE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>


        <ImageView
            android:id="@+id/profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

        <Button
            android:id="@+id/his"
            android:layout_alignParentEnd="true"
            android:layout_width="120dp"
            android:alpha="0.0"
            android:layout_height="wrap_content">
        </Button>


        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/hiso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/history2" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/details_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">


        <TextView
            android:textColor="#1430CA"
            android:id="@+id/bla"
            android:layout_alignParentRight="true"
            android:layout_marginRight="73dp"
            android:textStyle="bold"
            android:text="DATE:"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible">
        </TextView>

        <TextView
            android:layout_marginRight="5dp"
            android:textColor="#F44336"
            android:textSize="12dp"
            android:text="DATE:"
            android:id="@+id/datess"
            android:layout_marginTop="1dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:textColor="#1430CA"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            android:layout_below="@+id/bla"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:text="REF#:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible">
        </TextView>


        <TextView
            android:textColor="#F44336"

            android:id="@+id/autref"
            android:layout_marginTop="1dp"
            android:textSize="12sp"
            android:layout_below="@+id/BeginOrderLabel"

            android:layout_alignParentLeft="true"
            android:text="REF#"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <Button
            android:id="@+id/cl"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="60dp"
            android:alpha="0.0">

        </Button>

        <ImageView
            android:id="@+id/ll"
            android:layout_width="28dp"
            android:layout_height="20dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="1dp"
            android:layout_below="@id/autref"
            android:layout_toRightOf="@id/custd"
            app:srcCompat="@drawable/addicon">
        </ImageView>

        <ImageView
            android:id="@+id/customer_coverage_plan"
            android:layout_width="30dp"
            android:layout_height="23dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="1dp"
            android:layout_below="@id/autref"
            android:layout_toRightOf="@id/custd"
            app:srcCompat="@drawable/tao"></ImageView>

        <TextView
            android:id="@+id/ii"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prlvl_id"
            android:visibility="invisible"></TextView>

        <TextView
            android:id="@+id/cid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ii"
            android:visibility="invisible"
            tools:visibility="invisible">
        </TextView>

        <TextView
            android:id="@+id/location_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cid"
            android:text="151"
            android:visibility="invisible"
            tools:visibility="invisible">
        </TextView>

        <TextView
            android:id="@+id/sales_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_id"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            tools:visibility="invisible">

        </TextView>
        <TextView
            android:textColor="#1430CA"
            android:id="@+id/BeginOrderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="ORDER START:"
            android:layout_marginRight="5dp"
            android:textSize="12dp"
            android:textStyle="bold" >

        </TextView>

        <TextView
            android:textColor="#1430CA"
            android:id="@+id/BeginOrderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="ORDER START:"
            android:layout_toEndOf="@+id/BeginOrderLabel"
            android:layout_marginLeft="5dp"
            android:textSize="12dp"
            android:textStyle="bold" >

        </TextView>

        <TextView
            android:textColor="#1430CA"
            android:id="@+id/custd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/autref"
            android:text="CHOOSE CUSTOMER: "
            android:layout_marginRight="5dp"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/cusn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custd"
            android:layout_marginTop="10dp"
            android:text="NAME:"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/cname"
            android:layout_width="500dp"
            android:layout_height="33dp"
            android:layout_below="@+id/custd"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
           android:layout_toRightOf="@id/cusn"
            android:enabled="false"
            android:text="TEST"
            android:textColor="#3F51B5"
            android:textSize="12dp" />


        <TextView
            android:textSize="12dp"
            android:textStyle="bold"
            android:id="@+id/contact_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cusn"
            android:layout_marginTop="12dp"
            android:text="CONTACT:" />

        <EditText
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:textColor="#3F51B5"
            android:enabled="false"

            android:id="@+id/ccontact"
            android:layout_width="500dp"
            android:layout_height="33dp"
            android:layout_below="@+id/cusn"
            android:text="TEST"
            android:layout_toRightOf="@id/contact_label"
            android:layout_marginLeft="5dp" />

        <TextView
            android:textSize="12dp"
            android:textStyle="bold"
            android:id="@+id/cadds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_label"
            android:layout_marginTop="12dp"
            android:text="ADDRESS:" />

        <EditText
            android:textSize="12dp"
            android:textColor="#3F51B5"
            android:enabled="false"
            android:text="TEST"
            android:id="@+id/caddd"
            android:layout_width="500dp"
            android:layout_height="33dp"
            android:layout_below="@+id/contact_label"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/cadds"
            android:layout_marginTop="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cadds"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:text="SALES REP:"
                android:textSize="12dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:textColor="#3F51B5"
                android:id="@+id/slr"
                android:enabled="false"
                android:layout_width="500dp"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/sr1"
                android:layout_marginTop="2dp"
                android:text="TEST"

                android:textSize="12dp"
                android:textStyle=""></EditText>

            <TextView
                android:id="@+id/sr2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sr1"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:text="LOCATION:"
                android:textSize="12dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:textColor="#3F51B5"
                android:enabled="false"
                android:layout_marginTop="6dp"
                android:id="@+id/loc"
                android:layout_width="500dp"
                android:layout_height="33dp"
                android:layout_below="@+id/sr1"
                android:layout_toRightOf="@id/sr2"
                android:layout_marginLeft="5dp"
                android:text="OBEX - E(B)"
                android:textSize="12dp"
                android:textStyle="italic">
            </EditText>


            <TextView
                android:id="@+id/notes"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginLeft="0dp"
                android:text="PAYMENT TERM:"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/sr2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <EditText

                android:textSize="12dp"
                android:layout_marginTop="5dp"

                android:textColor="#3F51B5"
                android:enabled="false"
                android:id="@+id/ptt"
                android:text="TEST"
                android:layout_toRightOf="@id/notes"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/sr2"
                android:layout_width="500dp"
                android:layout_height="33dp">
            </EditText>


            <TextView
                android:id="@+id/sonotes"
                android:drawablePadding="0dp"
                android:drawableRight="@drawable/notes"
                android:textStyle="bold"
                android:layout_marginLeft="0dp"
                android:textSize="12dp"
                android:text="NOTE:"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/notes"
                android:layout_width="wrap_content"
                android:layout_height="20dp">
            </TextView>

            <TextView
                android:id="@+id/textnote"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_panel"
        android:layout_below="@id/details_panel"
        >
    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/adis"
        android:layout_marginLeft="0dp"

        android:layout_width="130dp"
        android:layout_height="25dp"
        android:alpha="0.0">
    </Button>

    <!--    <ImageView-->
    <!--        android:id="@+id/ppp"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginLeft="112dp"-->
    <!--        android:layout_marginTop="450dp"-->
    <!--        app:srcCompat="@drawable/addicon">-->
    <!--    </ImageView>-->


    <TextView
        android:drawableRight="@drawable/addicon"
        android:textColor="#1430CA"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="25dp"

        android:text="ITEM LIST:">
    </TextView>

        <ImageView

            android:id="@+id/sync_wsr"
            android:layout_toRightOf="@id/adis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/sinkicon"
            ></ImageView>


    <TextView
        android:id="@+id/total_label"
        android:textColor="#1430CA"
        android:textStyle="bold"
        android:layout_toRightOf="@id/adis"
        android:textSize="15sp"

        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:text="TOTAL:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>


    <EditText
        android:textColor="#F44336"
        android:id="@+id/tot"
        android:textAlignment="center"
        android:enabled="false"
        android:layout_toRightOf="@id/total_label"
        android:layout_marginLeft="5dp"

        android:layout_marginTop="0dp"
        android:layout_width="500dp"
        android:text="0.00"
        android:textSize="15dp"
        android:layout_height="36dp">
    </EditText>
    </RelativeLayout>




        <TableLayout
            android:id="@+id/tbl"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/total_panel"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@color/black">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="#4CAF50">


                <TextView
                    android:id="@+id/hlk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="10sp"
                    android:text="@string/col0"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/h1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="10sp"
                    android:text="@string/col1"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10sp" />


                <TextView
                    android:id="@+id/h2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="10sp"
                    android:text="@string/col2"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/h3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="10sp"
                    android:text="QTY"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10sp" />


                <TextView
                    android:id="@+id/h4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="10sp"
                    android:text="@string/col4"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10sp" />
            </TableRow>

        </TableLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViews"
        android:layout_below="@+id/tbl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</RelativeLayout>
