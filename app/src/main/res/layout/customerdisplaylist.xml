<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/use"
                android:layout_marginLeft="10dp"
                android:textColor="#3F51B5"
                android:textStyle="bold"
                android:textSize="23sp"
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Info:">

            </TextView>


            <TextView
               android:textStyle="bold"
                android:layout_below="@+id/header"
                android:layout_marginTop="10dp"
                android:id="@+id/ci"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:">
            </TextView>


            <TextView

                android:id="@+id/h1"
                android:layout_below="@+id/header"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID">
            </TextView>





            <TextView
                android:textStyle="bold"
                android:id="@+id/cnn"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/ci"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CUSTOMER NAME:">
            </TextView>


            <TextView
                android:textColor="#F44336"
                android:id="@+id/h2"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/ci"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CUSTOMER NAME:">
            </TextView>




            <TextView
                android:textStyle="bold"
                android:id="@+id/caddd"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/cnn"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADDRESS:">
            </TextView>




            <TextView
                android:textColor="#3F51B5"
                android:id="@+id/h3"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/cnn"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADDRESS:">
            </TextView>




            <TextView
                android:textStyle="bold"
                android:id="@+id/kk"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/caddd"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHONE NO:">
            </TextView>


            <TextView

                android:textColor="#F44336"
                android:id="@+id/h4"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/caddd"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHONE NO:">
            </TextView>



            <TextView
                android:textStyle="bold"
                android:id="@+id/kOF"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/kk"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTACT PERSON:">
            </TextView>


            <TextView
                android:textColor="#3F51B5"
                android:id="@+id/h5"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/kk"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTACT PERSON:">
            </TextView>

            <TextView
                android:textStyle="bold"
                android:id="@+id/longitude"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/kOF"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LONGITUDE:">
            </TextView>

            <TextView
                android:textStyle="bold"
                android:id="@+id/latitude"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/longitude"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LATITUDE:">
            </TextView>

            <TextView
                android:textColor="#3F51B5"
                android:id="@+id/lx"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/h5"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LONGITUDE:">
            </TextView>

            <TextView
                android:textColor="#3F51B5"
                android:id="@+id/ly"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/lx"
                android:textSize="12sp"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LATITUDE:">
            </TextView>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>