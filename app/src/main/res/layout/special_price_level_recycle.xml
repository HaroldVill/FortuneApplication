<?xml version="1.0" encoding="UTF-8" ?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/spl_header"
                android:textColor="#3F51B5"
                android:textStyle="bold"
                android:textSize="23sp"
                android:text="Special Price Level Info:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/spl_id"
                android:layout_below="@+id/spl_header"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textSize="17sp"
                android:text="SPL ID: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/spl_recorded_on"
                android:layout_below="@+id/spl_id"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textSize="17sp"
                android:text="RECORDED ON: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/spl_customer_id"
                android:layout_below="@id/spl_recorded_on"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textSize="17sp"
                android:text="CUSTOMER ID: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/spl_item_id"
                android:layout_below="@id/spl_customer_id"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textSize="17sp"
                android:text="ITEM_ID: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/spl_sales_rep_id"
                android:layout_below="@id/spl_item_id"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textSize="17sp"
                android:text="SALES REP. ID.: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/spl_price_level_id"
                android:layout_below="@id/spl_sales_rep_id"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textSize="17sp"
                android:text="PRICE LEVEL ID: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/spl_approved"
                android:layout_below="@+id/spl_price_level_id"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textSize="17sp"
                android:text="APPROVED: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/spl_approved_by"
                android:layout_below="@+id/spl_approved"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textSize="17sp"
                android:text="APPROVED BY: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/spl_approved_on"
                android:layout_below="@+id/spl_approved_by"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textSize="17sp"
                android:text="APPROVED ON: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/id_spl"
                android:layout_below="@id/spl_header"
                android:layout_marginTop="10dp"
                android:layout_marginStart="190dp"
                android:textSize="17sp"
                android:text="ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/recorded_on_spl"
                android:layout_below="@id/id_spl"
                android:layout_marginTop="10dp"
                android:layout_marginStart="150dp"
                android:textSize="17sp"
                android:text="RECORDED ON"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/customer_id_spl"
                android:layout_below="@+id/recorded_on_spl"
                android:layout_marginTop="10dp"
                android:layout_marginStart="190dp"
                android:textSize="17sp"
                android:text="CUSTOMER ID: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_id_spl"
                android:layout_below="@+id/customer_id_spl"
                android:layout_marginTop="10dp"
                android:layout_marginStart="190dp"
                android:textSize="17sp"
                android:text="ITEM ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/sales_rep_id_spl"
                android:layout_below="@+id/item_id_spl"
                android:layout_marginTop="10dp"
                android:layout_marginStart="190dp"
                android:textSize="17sp"
                android:text="SALES REP ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/price_level_id_spl"
                android:layout_below="@+id/sales_rep_id_spl"
                android:layout_marginTop="10dp"
                android:layout_marginStart="190dp"
                android:textSize="17sp"
                android:text="PRICE LEVEL ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/approved_spl"
                android:layout_below="@+id/price_level_id_spl"
                android:layout_marginTop="10dp"
                android:layout_marginStart="190dp"
                android:textSize="17sp"
                android:text="APPROVED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/approved_by_spl"
                android:layout_below="@+id/approved_spl"
                android:layout_marginTop="10dp"
                android:layout_marginStart="190dp"
                android:textSize="17sp"
                android:text="APPROVED BY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/approved_on_spl"
                android:layout_below="@+id/approved_by_spl"
                android:layout_marginTop="10dp"
                android:layout_marginStart="190dp"
                android:textSize="17sp"
                android:text="APPROVED ON"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>