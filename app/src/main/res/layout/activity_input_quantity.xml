        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="dada"
        android:textColor="#FAF6F6"
        android:visibility="invisible"
        tools:visibility="invisible"></TextView>

    <TextView
        android:id="@+id/idlvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemid"
        android:layout_alignParentRight="true"
        android:textColor="#FAF6F6"
        android:visibility="invisible"
        tools:visibility="invisible"></TextView>


    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/untbase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/samvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>




    <TextView
        android:drawablePadding="5dp"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/calcu"
        android:textColor="#FAF6F6"
        android:textStyle="italic"
        android:id="@+id/balik"
        android:layout_marginTop="10dp"
      android:textSize="25sp"
        android:text="SALES ORDER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <Button
        android:id="@+id/itemsave"
        android:drawableLeft="@drawable/saveitem"
       android:layout_marginTop="85dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:text="SAVE"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_width="100dp"
        android:layout_height="wrap_content">
    </Button>


    <androidx.cardview.widget.CardView
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="140dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/crd"
        android:layout_width="match_parent"
        android:layout_height="200dp">


    <RelativeLayout

        android:id="@+id/relate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lk"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="CODE:"
            android:textSize="17sp"></TextView>

 <EditText
     android:textColor="#3F51B5"
     android:enabled="false"
     android:id="@+id/q1"
     android:textAlignment="center"
     android:layout_marginLeft="70dp"
     android:layout_width="100dp"
     android:layout_height="wrap_content">
 </EditText>


    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:id="@+id/ttr"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/lk"
        android:textSize="17sp"
        android:text="DESCRIPTION:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <EditText
        android:textAlignment="center"
        android:textColor="#F44336"
        android:enabled="false"
        android:textSize="17sp"
        android:id="@+id/q2"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="125dp"
        android:layout_below="@+id/lk"
        android:layout_width="500dp"
        android:layout_height="wrap_content">

    </EditText>



    <TextView

        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:id="@+id/lo"
        android:textSize="17sp"
        android:layout_marginTop="55dp"
        android:text="ONHAND:"
        android:layout_below="@+id/ttr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>


    <EditText
        android:textColor="#0C0C0C"
        android:enabled="false"
        android:id="@+id/q3"
        android:textAlignment="center"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="85dp"
        android:layout_below="@id/ttr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </EditText>

    </RelativeLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
