<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="MissingPrefix"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="#233EDA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:drawableRight="@drawable/savena"
            android:id="@+id/save"
            android:textStyle="italic"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp"
            android:textSize="27sp"
            android:textColor="#ffffff"
            android:text="SAVE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>


        <ImageView
            android:id="@+id/profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

        <Button
            android:id="@+id/his"
            android:layout_alignParentEnd="true"
            android:layout_width="120dp"
            android:alpha="0.0"
            android:layout_height="wrap_content">
        </Button>


        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/hiso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/history2" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:textColor="#1430CA"
            android:id="@+id/bla"
            android:layout_alignParentRight="true"
            android:layout_marginRight="73dp"
            android:textStyle="bold"
            android:text="DATE:"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_marginRight="5dp"
            android:textColor="#F44336"
            android:textSize="18sp"
            android:text="date"
            android:id="@+id/datess"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:textColor="#1430CA"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            android:layout_below="@+id/bla"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:text="REF#:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>


        <TextView
            android:textColor="#F44336"
            android:layout_marginRight="5dp"
            android:id="@+id/autref"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            android:layout_below="@+id/bla"
            android:layout_alignParentRight="true"
            android:text="ref#"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <Button
            android:id="@+id/cl"
            android:layout_width="130dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="160dp"
            android:alpha="0.0"
            android:layout_height="wrap_content">

        </Button>


        <ImageView
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="166dp"
            android:layout_marginTop="73dp"
            app:srcCompat="@drawable/addicon">
        </ImageView>

        <TextView
            android:id="@+id/ii"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prlvl_id"></TextView>

        <TextView
            android:id="@+id/cid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ii"
            android:visibility="invisible"
            tools:visibility="invisible">
        </TextView>

        <TextView
            android:id="@+id/location_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cid"
            android:visibility="invisible"
            tools:visibility="invisible">
        </TextView>

        <TextView
            android:id="@+id/sales_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_id"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            tools:visibility="invisible">

        </TextView>

        <TextView
            android:textColor="#1430CA"
            android:id="@+id/custd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:text="CUSTOMER LIST:"
            android:layout_marginRight="5dp"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/cusn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custd"
            android:layout_marginTop="21dp"
            android:text="NAME:"
            android:textSize="17dp" />

        <EditText
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:enabled="false"
            android:textAlignment="center"
            android:id="@+id/cname"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custd"
            android:layout_marginLeft="90dp" />


        <TextView
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cusn"
            android:layout_marginTop="25dp"
            android:text="CONTACT:" />

        <EditText
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:enabled="false"
            android:textAlignment="center"
            android:id="@+id/ccontact"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cname"
            android:layout_marginLeft="90dp" />

        <TextView
            android:textSize="17dp"
            android:textStyle="bold"
            android:id="@+id/cadds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ccontact"
            android:layout_marginTop="32dp"
            android:text="ADDRESS:" />

        <EditText
            android:textSize="15sp"
            android:textColor="#000000"
            android:enabled="false"
            android:textAlignment="center"
            android:id="@+id/caddd"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ccontact"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="15dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cadds"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="SALES REP:"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:textColor="#000000"
                android:id="@+id/slr"
                android:enabled="false"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="8dp"
                android:text="jayfer Tugbong"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="italic"></EditText>

            <TextView
                android:id="@+id/sr2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sr1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="LOCATION:"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:textColor="#000000"
                android:enabled="false"
                android:textAlignment="center"
                android:id="@+id/loc"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sr1"
                android:layout_marginLeft="145dp"
                android:text="IBEX 1"
                android:textSize="15sp"
                android:textStyle="italic">
            </EditText>


            <TextView
                android:id="@+id/notes"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:text="PAYMENT TERM:"
                android:layout_marginTop="18sp"
                android:layout_below="@+id/sr2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <EditText
               android:textStyle="italic"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:enabled="false"
                android:id="@+id/ptt"
                android:layout_marginLeft="145dp"
                android:layout_below="@+id/sr2"
                android:layout_width="200dp"
                android:layout_height="wrap_content">
            </EditText>


            <TextView
                android:id="@+id/sonotes"
                android:drawablePadding="3dp"
                android:drawableRight="@drawable/notes"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:text="NOTE:"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/textnote"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>


        </RelativeLayout>

    </RelativeLayout>


    <Button
        android:layout_marginTop="505dp"
        android:id="@+id/adis"
        android:layout_marginLeft="107dp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:alpha="0.0">
    </Button>

<!--    <ImageView-->
<!--        android:id="@+id/ppp"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginLeft="112dp"-->
<!--        android:layout_marginTop="450dp"-->
<!--        app:srcCompat="@drawable/addicon">-->
<!--    </ImageView>-->


    <TextView
        android:drawableRight="@drawable/addicon"
        android:textColor="#1430CA"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="515dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="ITEM LIST:">
    </TextView>


    <TextView
        android:textColor="#1430CA"
        android:textStyle="bold"
        android:layout_marginRight="100sp"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="515dp"
        android:text="TOTAL:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>


    <EditText
        android:textColor="#F44336"
       android:id="@+id/tot"
        android:textAlignment="center"
        android:enabled="false"
        android:layout_alignParentRight="true"
        android:layout_marginTop="500dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content">
    </EditText>

    <RelativeLayout
        android:id="@+id/relatable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TableLayout
        android:id="@+id/tbl"
        android:layout_marginTop="545dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/black">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#4CAF50">


            <TextView
                android:id="@+id/hlk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="10sp"
                android:text="@string/col0"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/h1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="10sp"
                android:text="@string/col1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/h2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="10sp"
                android:text="@string/col2"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/h3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="10sp"
                android:text="@string/col3"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/h4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="10sp"
                android:text="@string/col4"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </TableRow>

    </TableLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViews"
        android:layout_below="@+id/relatable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />


</RelativeLayout>
