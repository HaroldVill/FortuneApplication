<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_for_background"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/customerName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/syncPriceChoice"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="SYNC"
            android:background="@drawable/circle_button"
            android:layout_marginTop="10dp"
            android:elevation="60dp"/>

    </LinearLayout>

    <Space
        android:layout_height="10dp"
        android:layout_width="match_parent"/>

    <TextView
        android:id="@+id/descriptionNames"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Space
        android:layout_height="10dp"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:id="@+id/whole_A"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/border_radius"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SPECIAL PRICE A"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/special_price_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp"/>
    </LinearLayout>

    <Space
        android:layout_height="10dp"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:id="@+id/whole_B"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/border_radius"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SPECIAL PRICE B"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/special_price_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp"/>
    </LinearLayout>

    <Space
        android:layout_height="10dp"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:id="@+id/whole_C"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/border_radius"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SPECIAL PRICE C"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/special_price_C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp"/>
    </LinearLayout>

    <Space
        android:layout_height="10dp"
        android:layout_width="match_parent"/>

    <Button
        android:id="@+id/request_approval_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REQUEST APPROVAL"
        android:background="@drawable/button_style"
        android:textStyle="bold"/>

</LinearLayout>