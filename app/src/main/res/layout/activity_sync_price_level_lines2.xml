<?xml version="1.0" encoding="UTF-8" ?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SyncPriceLevelLines2">

    <ProgressBar
        android:id="@+id/pll2_pb"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:visibility="invisible"
        style="?android:attr/progressBarStyle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/pll2_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4CAF50">

        <TextView
            android:id="@+id/pll2Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SYNC PRICE LEVEL"
            android:textColor="#FDFCFC"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/pll2Title2"
            android:layout_below="@+id/pll2Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LINES 2"
            android:textColor="#FDFCFC"
            android:layout_centerHorizontal="true"

            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/pll2_sync_history"
            android:layout_below="@+id/pll2Title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO SYNC HISTORY"
            android:textColor="#FDFCFC"

            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/pll2_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SYNC"
            android:layout_alignParentEnd="true"
            tools:ignore="HardcodedText"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/pll2_list_view"
        android:layout_below="@id/pll2_rl"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>